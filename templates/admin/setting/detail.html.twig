{% extends '_layouts/admin/main.html.twig' %}

{% block page %}Supplier Detail{% endblock %}

{% block content %}
    <h1>{{ setting.name }}</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Tên</th>
                <td>
                    {{ setting.name }}
                </td>
            </tr>
            <tr>
                <th>Code</th>
                <td>
                    {{ setting.code }}
                </td>
            </tr>
            <tr>
                <th>Giá trị</th>
                <td>
                    {% for value in setting.data %}
                        {{ value }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
        </tbody>
    </table>
    <div class="d-flex justify-content-start align-items-center">
        <a class="btn btn-primary mr-2" href="{{ path('admin_setting_index') }}">Danh sách</a>
        <a class="btn btn-info btn-bordered-info" href="">Sửa</a>
    </div>
    <div class="mt-2">
        {{ include('admin/supplier/_delete_form.html.twig') }}
    </div>
{% endblock %}