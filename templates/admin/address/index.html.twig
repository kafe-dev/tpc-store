    <script type="module">
        $(document).ready(function () {
            // get list categories
            $.ajax({
                url: '{{ url('admin_category_list') }}',
                type: 'GET',
                contentType: 'application/json',
                success: function (data) {
                    const table = $('#category-datatable-buttons tbody');
                    table.empty();

                    if (data.length === 0) {
                        table.append(`
                            <tr>
                                <td colspan="9" style="text-align: center">Không tìm thấy kết quả</td>
                            </tr>
                        `);
                    } else {
                        $.each(data, function (index, item) {
                            var deleteUrl = item.actions.delete;
                            table.append('<tr>' +
                                '<td><input type="checkbox" class="row-category-checkbox" value="' + item.id + '" "></td>' +
                                '<td>' + item.slug + '</td>' +
                                '<td>' + item.name + '</td>' +
                                '<td>' + (item.parent_name !== "-" ? item.parent_name : 'Khong Co') + '</td>' +
                                '<td>' + (item.status === 0 ? 'INACTIVE' : (item.status === 1 ? 'ACTIVE' : 'DRAFT')) + '</td>' +
                                '<td>' + item.childrens + '</td>' +
                                '<td>' + item.image + '</td>' +
                                '<td>' + item.description + '</td>' +
                                '<td>' +
                                '<a class="btn btn-outline-info btn-sm btn-detail mr-2 mb-1" href="' + item.actions.detail + '"><i class="fa fa-eye"></i></a>' +
                                '<a class="btn btn-outline-warning btn-sm btn-edit mr-2 mb-1" href="' + item.actions.update + '"><i class="fa fa-edit"></i></a>' +
                                '<a class="btn btn-outline-danger btn-sm btn-delete  mr-2 mb-1" href="' + deleteUrl +  '"><i class="fa fa-trash"></i></a>' +
                                '</td>' +
                                '</tr>'
                            );
                            table.find('.btn-delete').last().on('click', function (e) {
                                e.preventDefault();

                                Swal.fire({
                                    title: 'Bạn chắc chắn muốn xóa?',
                                    text: "Dữ liệu đã xóa không thể lấy lại!",
                                    icon: 'warning',
                                    showCancelButton: true,
                                    confirmButtonColor: '#d33',
                                    cancelButtonColor: '#3085d6',
                                    confirmButtonText: 'Yes',
                                    cancelButtonText: 'No'
                                }).then((result) => {
                                    if (result.value) {
                                        var deleteUrl = $(this).attr('href'); // Get delete URL from the clicked button's href attribute
                                        var token = $('meta[name="csrf-token"]').attr('content'); // Get CSRF token

                                        $.ajax({
                                            url: deleteUrl,
                                            type: 'POST',
                                            data: {
                                                _token: token,
                                            },
                                            success: function(response) {
                                                window.location.href = '{{ path('admin_category_index') }}'; // Redirect to index page
                                            },
                                            error: function() {
                                                Swal.fire(
                                                    'Lỗi!',
                                                    'Lỗi khi xóa nhà cung cấp',
                                                    'error'
                                                );
                                            }
                                        });
                                    }
                                });
                            });
                        });
                    }
                    // Create datatable
                    if ($('#category-datatable-buttons_wrapper').length > 0) {
                        return;
                    }
                    let a = $("#category-datatable-buttons").DataTable({
                        lengthChange: !1,
                        buttons: ["copy", "excel", "pdf"],
                        columnDefs: [
                            {orderable: false, targets: 6},
                            {searchable: false, targets: 6},
                            {width: '1%', targets: 0},
                            {width: '5%', targets: 1},
                            {width: '15%', targets: 2},
                            {width: '15%', targets: 3},
                            {width: '14%', targets: 4},
                            {width: '14%', targets: 5},
                            {width: '14%', targets: 6},
                            {width: '15%', targets: 7},
                            {width: '5%', targets: 8},
                        ],
                        initComplete:
                            function () {
                                this.api()
                                    .columns()
                                    .every(function () {
                                        let column = this;

                                        if (column.index() === 8 || column.index() === 0) {
                                            return;
                                        }

                                        let input = document.createElement('input');
                                        input.type = 'text';
                                        input.style.width = '100%';
                                        input.placeholder = 'Search...';
                                        column.footer().replaceChildren(input);

                                        input.addEventListener('input', function () {
                                            column
                                                .search(input.value, {exact: false})
                                                .draw();
                                        });
                                    });
                            }
                    });
                    a.buttons().container().appendTo("#category-datatable-buttons_wrapper .col-md-6:eq(0)");
                }
            });
        });
    </script>
    <script>
        // Handle "Select All" checkbox
        $('.category-select-all').on('click', function () {
            $('.row-category-checkbox').prop('checked', this.checked);
            $('.category-select-all').prop('checked', this.checked);
        });

        // Collect id has checked
        function getSelectedIds() {
            var selected = [];
            $('.row-category-checkbox:checked').each(function () {
                selected.push($(this).val());
            });
            return selected;
        }
    </script>
