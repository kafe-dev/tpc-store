            if (ids.length === 0) {
                alert('Không có ô nào đươc chọn');
                return;
            }
            console.log(ids);

            if (confirm('Bạn có muốn xoá các danh mục này?')) {
                $.ajax({
                    url: '{{ path('admin_category_bulk_delete') }}',
                    type: 'POST',
                    cache: false,
                    data: {'ids': ids},
