{% extends '_layouts/main.html.twig' %}

{% block title %}{{ title }}  | {{ app_name }}{% endblock title %}

{% block content %}
    <!-- Breadcrumb Area Start Here -->
    <div class="breadcrumb-area">
        <div class="container">
            <ol class="breadcrumb breadcrumb-list">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_home_index') }}">Home</a>
                </li>
                <li class="breadcrumb-item active">Login</li>
            </ol>
        </div>
    </div>
    <!-- Breadcrumb Area End Here -->
    <!-- Login Page Start Here -->
    <div class="login ptb-80">
        <div class="container">
            <h3 class="login-header">Đăng nhập</h3>
            <div class="row">
                <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                    <div class="login-form">
                        {% if error %}
                            <div class="alert alert-danger text-danger alert-dismissible fade show" role="alert">
                                <strong>Lỗi!</strong> {{ error }}
                            </div>
                        {% endif %}
                        <form action="{{ url('app_security_login') }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="form-group row">
                                <label for="email" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="email" name="_username" placeholder="Tên đăng nhập">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword" class="col-sm-3 col-form-label">Mật khẩu</label>
                                <div class="col-sm-7">
                                    <input type="password" class="form-control" id="inputPassword" name="_password"
                                           placeholder="Password">
                                </div>
                            </div>
                            <div class="login-details text-center mb-25">
                                <a href="{{ path('app_home_forgot_password') }}">Quên mật khẩu? </a>
                                <button type="submit" class="login-btn">Đăng nhập</button>
                            </div>
                            <div class="login-footer text-center">
                                <p>Bạn chưa có tài khoản? <a href="{{ path('app_security_register') }}">Đăng ký tại đây!</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Page End Here -->
{% endblock %}