{% extends 'base.html.twig' %}

{% block title %}
    {% block page %}{% endblock %} | {{ app_name }} Admin
{% endblock %}

{% block importmap %}{{ importmap('admin') }}{% endblock %}

{% block body %}
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center mb-4 mt-3">
                                <a href="{{ app_url }}">
                                    <span><img src="{{ asset('resources/admin/images/logo-dark.png') }}" alt="logo" height="30"></span>
                                </a>
                            </div>
                            {% block content %}{% endblock %}
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-12 text-center">
                            <p class="text-muted mb-0">Copyright &copy; {{ 'now' | date('Y') }} | <a href="{{ app_url }}" class="text-primary ml-1"><b>{{ app_name }}</b></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('resources/admin/js/vendor.min.js') }}"></script>
    <script src="{{ asset('resources/admin/js/app.min.js') }}"></script>
{% endblock %}
